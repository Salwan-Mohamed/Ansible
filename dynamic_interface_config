---
- name: Configure Cisco Switch Port Based on Device Type and VLAN Lookup
  hosts: "{{ switch_name }}"
  gather_facts: no
  tasks:

    - name: Retrieve VLAN ID for the device type
      cisco.ios.ios_command:
        commands: "show vlan brief | include {{ device_type }}"
      register: vlan_output

    - name: Parse VLAN ID from switch output
      set_fact:
        vlan_id: "{{ vlan_output.stdout[0].split()[0] | default('None') }}"

    - name: Retrieve VLAN ID for phone
      cisco.ios.ios_command:
        commands: "show vlan brief | include voice"
      register: phone_vlan_output
      when: device_type in ['phone', 'device and phone']

    - name: Parse Phone VLAN ID from switch output
      set_fact:
        phone_vlan_id: "{{ phone_vlan_output.stdout[0].split()[0] | default('None') }}"
      when: device_type in ['phone', 'device and phone']

    - name: Get description for port from file
      set_fact:
        port_description: "{{ port_descriptions[port_number] | default('No description set') }}"

    - name: Reset the interface to default configuration
      cisco.ios.ios_config:
        lines:
          - "default interface GigabitEthernet{{ port_number }}"

    - name: Define configuration based on device type
      set_fact:
        config_lines: >-
          {{
            {
              'device': [
                'description {{ port_description }}',
                'switchport mode access',
                'switchport access vlan {{ vlan_id }}',
                'duplex full',
                'switchport port-security mac-address sticky',
                'switchport port-security maximum 1',
                'switchport port-security',
                'no shutdown'
              ],
              'phone': [
                'description {{ port_description }}',
                'switchport mode access',
                'switchport voice vlan {{ phone_vlan_id }}',
                'duplex full',
                'switchport port-security mac-address sticky',
                'switchport port-security maximum 1',
                'switchport port-security',
                'no shutdown'
              ],
              'device and phone': [
                'description {{ port_description }}',
                'switchport mode access',
                'switchport access vlan {{ vlan_id }}',
                'switchport voice vlan {{ phone_vlan_id }}',
                'duplex full',
                'switchport port-security mac-address sticky',
                'switchport port-security maximum 2',
                'switchport port-security',
                'no shutdown'
              ],
              'none': [
                'description {{ port_description }}',
                'shutdown'
              ]
            }[device_type]
          }}

    - name: Configure interface VLAN, description, and security
      cisco.ios.ios_config:
        lines: "{{ config_lines }}"
        parents: "interface GigabitEthernet{{ port_number }}"

    - name: Debugging Output
      debug:
        msg:
          - "Applied Config: {{ config_lines }}"
